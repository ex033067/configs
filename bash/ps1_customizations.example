# vim: filetype=sh
#
# Customize variables for PS1.
# Save this file as "~/.ps1_customizations" to take effect.
#

# Colors
# See colorcodes in section "256 (8-bit) Colors" from
# http://bitmote.com/index.php?post/2012/11/19/Using-ANSI-Color-Codes-to-Colorize-Your-Bash-Prompt-on-Linux
export PS1_COLOR_DEFAULT='\[\e[38;5;15;48;5;24m\]'  # white on dark blue
export PS1_COLOR_ERROR='\[\e[38;5;15;48;5;1m\]'  # white on red


# Hostname
# export HOSTNAME_ALIAS=office
export HOSTNAME_ALIAS=$HOSTNAME


# Python virtualenv
export VIRTUAL_ENV_DISABLE_PROMPT=1
