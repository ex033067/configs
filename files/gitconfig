[user]
        name = viniciusban
        email = viniciusban@gmail.com

[merge]
        ; ff = false

[color]
        ui = 1

[diff]
        tool = vimdiff

[difftool]
        prompt = no

[alias]
        aliases = !git config --list | grep ^alias
        branches = branch -a
        commits = log -5
        remotes = remote -v
        stashes = stash list
        tags = tag -l -n1
        history = log -5 --graph --date=iso --decorate

        path = rev-parse --show-toplevel
        s = status -s
        currentbranch = rev-parse --abbrev-ref HEAD
        newbranch = checkout -b
        lastbranch = checkout -

        amend = commit --amend
        discard = checkout --
        unstage = !git subtract

        l = log -10 --abbrev-commit --date=format:'%m/%d %H:%M' --format='tformat:%C(auto)%h %ad %s'
        lg = log --graph -10 --branches --remotes --tags --format=format:'%Cgreen%h %Creset%<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order

        nevermind = !git reset --hard HEAD && git clean -d -f
        rollbackkk = reset --mixed HEAD^
        rollback-to = reset --hard

        pullc = !git rev-parse --abbrev-ref HEAD | xargs -p git pull --tags origin
        pushc = !git rev-parse --abbrev-ref HEAD | xargs -p git push --tags origin

[core]
        autocrlf = input
        editor = vim
[http]
        sslVerify = false
[push]
        default = matching

[commit]
        template = ~/.git_commit_template.txt

[include]
        path = ~/.gitconfig_os_specific

[rebase]
        autosquash = true
