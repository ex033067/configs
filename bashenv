#!/usr/bin/env bash

unset -f is_interactive
function is_interactive() {
    [[ "$-" =~ i ]]
}

unset -f __source
function __source() {
    local dir="$1"
    for file in "$dir"/*.sh; do
        [ -r "$file" ] || continue
        source "$file"
    done
}

unset -f __main
function __main() {
    if ! is_interactive; then
        return
    fi

    __source ~/.local/bin/bashenv.d
    __source ~/.local/bin/bashenv.d/modules
    __source ~/.local/bin/bashenv.d/completions
}

__main
