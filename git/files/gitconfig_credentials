# Now you can include other files according to gitdir.
# "gitdir" is a git variable that points to the repo path.
#
# Examples:
#
#[includeIf "gitdir:~/src/Work/ACME/**"]
#  path = ~/src/Work/CorrelationOne/gitconfig
#[includeIf "gitdir:~/src/Work/NASA/**"]
#  path = ~/src/Work/CorrelationOne/gitconfig
#
#
# file ~/src/Work/ACME/gitconfig
#[user]
#  email = johnny@acme.com
#  name = Johnny
#
# file ~/src/Work/Nasa/gitconfig
#[user]
#  email = john.doe@nasa.gov
#  name = John Doe
